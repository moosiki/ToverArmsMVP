<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tover.manage.login" >
    <application>
        <activity
            android:name=".mvp.ui.activity.LoginActivity"
            android:label="@string/login_module_name"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>
        <!-- 在组件集成宿主时, 由于宿主已经声明了 CommonSDK 的公有 ConfigModule, 所以在这里只需要声明业务组件自己的 ConfigModule -->
        <meta-data
            android:name="com.tover.manage.login.app.GlobalConfiguration"
            android:value="ConfigModule"/>
    </application>
</manifest>
