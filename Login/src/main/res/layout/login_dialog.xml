<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg_dialog"
    android:gravity="center"
    android:minHeight="60dp"
    android:minWidth="180dp"
    android:padding="10dp"
    >
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/login_avlv_dialog_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:indicatorName="TriangleSkewSpinIndicator"
        app:indicatorColor="@color/login_dialog_background"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_dialog_text"
        android:textSize="@dimen/public_font_14sp"
        android:textColor="@color/login_dialog_text_color"/>
</LinearLayout>